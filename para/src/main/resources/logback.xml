<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%-30(%d{HH:mm:ss} %highlight([%-5level])) %msg%n</pattern>
    </encoder>
  </appender>

	<appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>para.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- rollover monthly -->
      <fileNamePattern>para-%d{yyyy-MM}.%i.log</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <!-- or whenever the file size reaches 50MB -->
        <maxFileSize>50MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>
    <encoder>
      <pattern>%-30(%d [%-5level]) %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.apache" level="WARN"/>
  <logger name="org.elasticsearch" level="INFO"/>
  <logger name="org.springframework" level="WARN"/>
  <logger name="org.eclipse.jetty" level="WARN"/>
  <logger name="com.erudika" level="INFO"/>
  <logger name="com.amazonaws" level="INFO"/>
  <logger name="org.tuckey" level="WARN"/>
  <logger name="org.openid4java" level="ERROR"/>
  <logger name="org.glassfish" level="WARN"/>
  <logger name="org.hibernate" level="WARN"/>
  <logger name="com.hazelcast" level="WARN"/>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="ROLLING" />
  </root>
</configuration>